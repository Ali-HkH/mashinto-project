datasource db {
  provider          = "postgresql"
  url               = env("DATABASE_URL")
  directUrl         = env("DIRECT_URL")
}

generator client {
  provider = "prisma-client-js"
  output   = "../node_modules/.prisma/client"
}

model Profile {
  id           String     @id @default(uuid())
  clerkId      String     @unique
  firstName    String
  lastName     String
  username     String
  email        String
  profileImage String
  createdAt    DateTime   @default(now())
  updatedAt    DateTime   @updatedAt
  cars         Car[]
  favorites    Favorite[]
}

model Car {
  id             String    @id @default(uuid())
  company        String    
  model          String    
  color          String
  year           Int       
  category       String    
  image          String    
  city           String
  tagline        String
  description    String    
  price          Int       
  seats          Int       
  doors          Int       
  transmission   String    
  fuelType       String     
  kilometer      Int       
  amenities      String
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt
  profile        Profile   @relation(fields: [profileId], references: [clerkId], onDelete: Cascade)
  profileId      String
  favorites    Favorite[]

}

model Favorite {
  id        String   @id @default(uuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  profile   Profile  @relation(fields: [profileId], references: [clerkId], onDelete: Cascade)
  profileId String
  car       Car  @relation(fields: [carId], references: [id], onDelete: Cascade)
  carId     String

}